@page "{id:int?}"
@model Proiect_Magazin.Pages.Designers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Designer[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Designer[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DesignerData.Designers)
        {
            string selectedRow = "";
            if (item.ID == Model.DesignerID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            <td>
                <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.DesignerData.Clothes != null)
{
    <h3>Books Edited by Selected Designer</h3>
    <table class="table">

        @foreach (var item in Model.DesignerData.Designers)
        {
            string selectedRow = "";
            if (item.ID == Model.DesignerID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var b in item.Clothes)
                        {

                            @b.Name @: @b.Collection.CollectionName

                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}

